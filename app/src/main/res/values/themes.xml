<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Seminar28th" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>

        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CommonButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>